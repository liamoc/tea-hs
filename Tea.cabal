  exposed-modules:     Tea
                       Tea.Bitmap
                       Tea.BlendMode
                       Tea.Blitting
                       Tea.Clipping
                       Tea.Color
                       Tea.Display
                       Tea.Event
                       Tea.Font
                       Tea.Grabbing
                       Tea.ImageSaving
                       Tea.Input
                       Tea.Primitive
                       Tea.Screen
                       Tea.Size
                       Tea.Sound
